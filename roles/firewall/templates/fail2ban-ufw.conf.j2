# Fail2Ban configuration file for UFW integration
[Definition]

# Option: actionstart
# Notes: command executed once at the start of Fail2Ban.
actionstart =

# Option: actionstop
# Notes: command executed once at the end of Fail2Ban
actionstop =

# Option: actioncheck
# Notes: command executed once before each actionban command
actioncheck =

# Option: actionban
# Notes: command executed when banning an IP
actionban = ufw insert 1 deny from <ip> to any
            echo "[$(date)] Banned IP <ip> via UFW" >> /var/log/fail2ban-ufw.log

# Option: actionunban
# Notes: command executed when unbanning an IP
actionunban = ufw delete deny from <ip> to any
              echo "[$(date)] Unbanned IP <ip> via UFW" >> /var/log/fail2ban-ufw.log

[Init]
# Default name of the chain
name = default