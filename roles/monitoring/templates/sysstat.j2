# /etc/default/sysstat configuration
# Generated by Ansible

# Should sadc collect system activity information?
# Valid values are "true" and "false"
ENABLED="{{ performance_monitoring_enabled | default('true') | lower }}"

# Additional options passed to sadc
# See man sadc for available options
SADC_OPTIONS="{{ sysstat_options | default('-S DISK') }}"

# Interval between data collection (in seconds)
SA_INTERVAL="{{ sysstat_interval | default('600') }}"

# Number of data files to keep
HISTORY="{{ sysstat_history_days | default('7') }}"

# Compress old data files
COMPRESSAFTER="{{ sysstat_compress_after | default('31') }}"