# Bash aliases for {{ admin_username }}

{% for alias in bash_aliases %}
{{ alias }}
{% endfor %}

# Matrix server specific aliases
alias mstatus='sudo systemctl status matrix-synapse'
alias mrestart='sudo systemctl restart matrix-synapse'
alias mlogs='sudo journalctl -u matrix-synapse -f'
alias caddy-status='sudo systemctl status caddy'
alias caddy-restart='sudo systemctl restart caddy'
alias caddy-logs='sudo journalctl -u caddy -f'

# System monitoring
alias ports='sudo netstat -tulpn | grep LISTEN'
alias processes='ps aux | head -20'
alias diskspace='df -h'
alias meminfo='free -h'
alias cpuinfo='cat /proc/cpuinfo | grep "model name" | head -1'

# Security
alias failed-ssh='sudo grep "Failed password" /var/log/auth.log | tail -10'
alias ssh-attempts='sudo grep "sshd" /var/log/auth.log | tail -20'
alias firewall-status='sudo ufw status verbose'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias home='cd ~'
alias root='cd /'